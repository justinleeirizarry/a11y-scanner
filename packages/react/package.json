{
    "name": "@accessibility-toolkit/react",
    "version": "0.1.0",
    "description": "React plugin for Accessibility Toolkit - Fiber traversal and component attribution",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "type": "module",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js"
        }
    },
    "files": [
        "dist"
    ],
    "scripts": {
        "build": "tsc && npm run build:bundle",
        "build:bundle": "esbuild src/browser-bundle.ts --bundle --platform=browser --format=iife --global-name=ReactA11yPlugin --outfile=dist/react-bundle.js",
        "dev": "tsc --watch",
        "test": "vitest run",
        "test:watch": "vitest"
    },
    "keywords": [
        "react",
        "accessibility",
        "a11y",
        "fiber",
        "components"
    ],
    "license": "MIT",
    "dependencies": {
        "@accessibility-toolkit/core": "workspace:*",
        "bippy": "^0.5.16"
    },
    "devDependencies": {
        "@types/node": "^20.10.0",
        "esbuild": "^0.19.0",
        "typescript": "^5.3.0",
        "vitest": "^4.0.13"
    }
}
