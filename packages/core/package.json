{
    "name": "@accessibility-toolkit/core",
    "version": "0.1.0",
    "description": "Core library for Accessibility Toolkit - framework-agnostic accessibility testing with axe-core",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "type": "module",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js"
        }
    },
    "files": [
        "dist"
    ],
    "scripts": {
        "build": "tsc && npm run build:scanner",
        "build:scanner": "esbuild src/scanner/browser-bundle.ts --bundle --platform=browser --format=iife --global-name=A11yScanner --outfile=dist/scanner-bundle.js",
        "dev": "tsc --watch",
        "dev:scanner": "esbuild src/scanner/browser-bundle.ts --bundle --platform=browser --format=iife --global-name=A11yScanner --outfile=dist/scanner-bundle.js --watch",
        "test": "vitest run",
        "test:watch": "vitest"
    },
    "keywords": [
        "accessibility",
        "a11y",
        "testing",
        "axe",
        "wcag",
        "keyboard"
    ],
    "license": "MIT",
    "dependencies": {
        "axe-core": "^4.8.3",
        "cosmiconfig": "^9.0.0",
        "dotenv": "^17.2.3",
        "effect": "^3.19.15",
        "playwright": "^1.56.1",
        "zod": "^3.25.76"
    },
    "devDependencies": {
        "@axe-core/playwright": "^4.11.0",
        "@playwright/test": "^1.56.1",
        "@types/jsdom": "^27.0.0",
        "@types/node": "^20.10.0",
        "esbuild": "^0.19.0",
        "jsdom": "^27.2.0",
        "typescript": "^5.3.0",
        "vitest": "^4.0.13"
    }
}
