{
    "name": "react-a11y-scanner",
    "version": "0.1.0",
    "description": "CLI tool that combines React Fiber inspection with accessibility testing to provide component-specific violation reports",
    "main": "dist/index.js",
    "type": "module",
    "exports": {
        ".": "./dist/index.js",
        "./services": "./dist/services/index.js"
    },
    "bin": {
        "react-a11y-scanner": "./bin/cli.js",
        "mcp-server": "./dist/mcp-server.js"
    },
    "scripts": {
        "build": "tsc && npm run build:scanner",
        "build:mcp": "tsc && chmod +x dist/mcp-server.js",
        "build:scanner": "esbuild src/scanner/browser-bundle.ts --bundle --platform=browser --format=iife --global-name=ReactA11yScanner --outfile=dist/scanner-bundle.js",
        "dev": "tsc --watch",
        "dev:scanner": "esbuild src/scanner/browser-bundle.ts --bundle --platform=browser --format=iife --global-name=ReactA11yScanner --outfile=dist/scanner-bundle.js --watch",
        "start": "node ./bin/cli.js",
        "test:fixture": "node ./bin/cli.js file://$(pwd)/test/fixtures/test-app.html",
        "test": "vitest run",
        "test:watch": "vitest",
        "test:ui": "vitest --ui",
        "test:coverage": "vitest run --coverage"
    },
    "keywords": [
        "react",
        "accessibility",
        "a11y",
        "testing",
        "cli",
        "axe",
        "fiber",
        "components"
    ],
    "author": "",
    "license": "MIT",
    "dependencies": {
        "@browserbasehq/stagehand": "^3.0.3",
        "@modelcontextprotocol/sdk": "^1.22.0",
        "axe-core": "^4.8.3",
        "bippy": "^0.5.16",
        "chalk": "^5.3.0",
        "dotenv": "^17.2.3",
        "effect": "^3.19.15",
        "ink": "^4.4.1",
        "ink-spinner": "^5.0.0",
        "meow": "^13.1.0",
        "playwright": "^1.40.0",
        "react": "^18.2.0",
        "react-dom": "^18.3.1",
        "zod": "^3.25.76"
    },
    "devDependencies": {
        "@axe-core/playwright": "^4.11.0",
        "@playwright/test": "^1.56.1",
        "@types/jsdom": "^27.0.0",
        "@types/node": "^20.10.0",
        "@types/react": "^18.2.0",
        "@types/react-dom": "^18.3.7",
        "@vitest/coverage-v8": "^4.0.13",
        "@vitest/ui": "^4.0.13",
        "esbuild": "^0.19.0",
        "ink-testing-library": "^4.0.0",
        "jsdom": "^27.2.0",
        "typescript": "^5.3.0",
        "vitest": "^4.0.13"
    }
}
