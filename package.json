{
    "name": "accessibility-toolkit-monorepo",
    "version": "0.1.0",
    "private": true,
    "description": "Monorepo for Accessibility Toolkit - Generic accessibility testing with optional React support and AI-powered auditing",
    "type": "module",
    "scripts": {
        "build": "pnpm -r build",
        "dev": "pnpm -r --parallel dev",
        "test": "vitest run",
        "test:watch": "vitest",
        "test:ui": "vitest --ui",
        "test:coverage": "vitest run --coverage",
        "clean": "pnpm -r exec rm -rf dist node_modules && rm -rf node_modules",
        "start": "pnpm --filter @accessibility-toolkit/cli start"
    },
    "keywords": [
        "accessibility",
        "a11y",
        "testing",
        "cli",
        "axe",
        "wcag",
        "react",
        "ai-auditor"
    ],
    "author": "",
    "license": "MIT",
    "devDependencies": {
        "@vitest/coverage-v8": "^4.0.13",
        "@vitest/ui": "^4.0.13",
        "typescript": "^5.3.0",
        "vitest": "^4.0.13"
    },
    "engines": {
        "node": ">=18.0.0",
        "pnpm": ">=8.0.0"
    },
    "packageManager": "pnpm@8.15.0"
}
